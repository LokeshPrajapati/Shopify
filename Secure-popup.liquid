          <img src="{{block.settings.img2 | img_url : 'master'}}" />
          {%if block.settings.img-heading1 != blank%}
          <h4 class="img-heading">{{block.settings.img-heading1}}</h4>
          {%endif%}
        </div>
        {%endif%}
        <div class="table-content">
          {%if block.settings.text_1 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%else%}normal-text{%endif%}">{{block.settings.text_1}}</p>
          {%endif%}
          {%if block.settings.text_2 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%endif%}">{{block.settings.text_2}}</p>
          {%endif%}
          {%if block.settings.text_3 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%endif%}">{{block.settings.text_3}}</p>
          {%endif%}
        </div>

      </div>
    </div>
    <div class="{{col--width}} small-hide">
      <div class="popup">
        {%if block.settings.img3 != blank%}
        <div class="table--image">
          <img src="{{block.settings.img3 | img_url : 'master'}}" />
          {%if block.settings.img-heading2 != blank%}
          <h4 class="img-heading">{{block.settings.img-heading2}}</h4>
          {%endif%}
        </div>
        {%endif%}
        <div class="table-content">
          {%if block.settings.text--1 != blank%}
