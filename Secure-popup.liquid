    <img src="https://cdn.shopify.com/s/files/1/0567/2920/6954/files/cancel.png?v=1633611693" class="close-button-img" />
  </div>
  {%if block.settings.main-heading != blank%}
  <h2 class="main-heading text-center">{{block.settings.main-heading}}</h2>
  {%endif%}
  <div class="table-popup">
    <div class="{{col--width}} small-hide">
      <div class="popup">
        {%if block.settings.img1 != blank%}
        <div class="table--image">
          <img src="{{block.settings.img1 | img_url : 'master'}}" />
          {%if block.settings.img-heading != blank%}
          <h4 class="img-heading">{{block.settings.img-heading}}</h4>
          {%endif%}
        </div>
        {%endif%}
        <div class="table-content">
          {%if block.settings.text != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%else%}normal-text{%endif%}">{{block.settings.text}}</p>
          {%endif%}
          {%if block.settings.text1 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%else%}normal-text{%endif%}">{{block.settings.text1}}</p>
          {%endif%}
          {%if block.settings.text2 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%else%}normal-text{%endif%}">{{block.settings.text2}}</p>
