{%for block in section.blocks%}
	{% case block.type %}
	{% when 'multiple-image-with-text'%}
	{% assign col--width = 'medium-up--one-half small-one-whole'%}
	<div class="pop-up-container" id="{%- if block.settings.id != blank -%}{{- block.settings.id -}} {%- else -%} {{block.settings.main-heading | handleize }} {%- endif -%}">
		<div class="popup-inline-container inner_popup" id="{%- if block.settings.id != blank -%}{{- block.settings.id -}} {%- else -%} {{block.settings.main-heading | handleize }} {%- endif -%}">
  <div class="close-button">
    <img src="https://cdn.shopify.com/s/files/1/0567/2920/6954/files/cancel.png?v=1633611693" class="close-button-img" />
  </div>
  {%if block.settings.main-heading != blank%}
  <h2 class="main-heading text-center">{{block.settings.main-heading}}</h2>
  {%endif%}
  <div class="inline-popup {%if block.settings.text-position%}text-position--{{block.settings.text-position}}{%endif%}">
    <div class="{{col--width}}">
      <div class="popup {%if block.settings.text-position%}text--{{block.settings.text-position}}{%endif%}">
        {% if block.settings.img != blank %}
        <div class="popup-image">
          <img src="{{block.settings.img |  img_url : 'master'}}" />
        </div>
        {% endif %} 
        {% if block.settings.description != blank%}
        <div class="popup-descriptions">
          {% if block.settings.recommend != blank%}
          <h5 class="recommendation-text">{{block.settings.recommend}}</h5>
          {%endif%}
          {% if block.settings.heading != blank %}
          <h3 class="heading_popup">{{block.settings.heading}}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
          <p class="popup--description">{{block.settings.description}}</p>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
    <div class="{{col--width}}">
      <div class="popup {%if block.settings.text-position%}text--{{block.settings.text-position}}{%endif%}">
        {% if block.settings.img-1 != blank %}
        <div class="popup-image">
          <img src="{{block.settings.img-1 |  img_url : 'master'}}" />
        </div>
        {% endif %} 
        {% if block.settings.description-1 != blank%}
        <div class="popup-descriptions">
          {% if block.settings.recommend-1 != blank%}
          <h5 class="recommendation-text">{{block.settings.recommend-1}}</h5>
          {%endif%}
          {% if block.settings.heading-1 != blank %}
          <h3 class="heading_popup">{{block.settings.heading-1}}</h3>
          {% endif %}
          {% if block.settings.description-1 != blank %}
          <p class="popup--description">{{block.settings.description-1}}</p>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
    <div class="{{col--width}}">
      <div class="popup {%if block.settings.text-position%}text--{{block.settings.text-position}}{%endif%}">
        {% if block.settings.img-2 != blank %}
        <div class="popup-image">
          <img src="{{block.settings.img-2 |  img_url : 'master'}}" />
        </div>
        {% endif %} 
        {% if block.settings.description-2 != blank%}
        <div class="popup-descriptions">
          {% if block.settings.recommend-2 != blank%}
          <h5 class="recommendation-text">{{block.settings.recommend-2}}</h5>
          {%endif%}
          {% if block.settings.heading-2 != blank %}
          <h3 class="heading_popup">{{block.settings.heading-2}}</h3>
          {% endif %}
          {% if block.settings.description-2 != blank %}
          <p class="popup--description">{{block.settings.description-2}}</p>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
    <div class="{{col--width}}">
      <div class="popup {%if block.settings.text-position%}text--{{block.settings.text-position}}{%endif%}">
        {% if block.settings.img-3 != blank %}
        <div class="popup-image">
          <img src="{{block.settings.img-3 |  img_url : 'master'}}" />
        </div>
        {% endif %} 
        {% if block.settings.description-3 != blank%}
        <div class="popup-descriptions">
          {% if block.settings.recommend-3 != blank%}
          <h5 class="recommendation-text">{{block.settings.recommend-3}}</h5>
          {%endif%}
          {% if block.settings.heading-3 != blank %}
          <h3 class="heading_popup">{{block.settings.heading-3}}</h3>
          {% endif %}
          {% if block.settings.description-3 != blank %}
