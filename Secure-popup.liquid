          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%endif%}">{{block.settings.text--2}}</p>
          {%endif%}
          {%if block.settings.text--3 != blank%}
          <p class="table-text{%if block.settings.font-weight == 'bold'%}bold{%endif%}">{{block.settings.text--3}}</p>
          {%endif%}
        </div>

      </div>
    </div>
    <div class="mobile-view large-d-none">
      <div class="mobile-table-popup">
        <div class="mobile-table-content">
          <div class="mobile-container">
            {%if block.settings.text != blank%}
            <p class="table-text {%if block.settings.font-weight == 'bold'%}text-bold{%else%}text-normal-text{%endif%}">{{block.settings.text}}</p>
            {%endif%}
            {%if block.settings.mobile-text != blank%}
            <p class="tabel-popup-mobile-description">{{block.settings.mobile-text}}</p>
            {%endif%}
          </div>
          <div class="mobile-container">
            {%if block.settings.text1 != blank%}
            <p class="table-text {%if block.settings.font-weight == 'bold'%}text-bold{%else%}text-normal-text{%endif%}">{{block.settings.text1}}</p>
            {%endif%}
            {%if block.settings.mobile-text1 != blank%}
            <p class="tabel-popup-mobile-description">{{block.settings.mobile-text1}}</p>
            {%endif%}
          </div>
          <div class="mobile-container">
            {%if block.settings.text2 != blank%}
            <p class="table-text {%if block.settings.font-weight == 'bold'%}text-bold{%else%}text-normal-text{%endif%}">{{block.settings.text2}}</p>
            {%endif%}
            {%if block.settings.mobile-text2 != blank%}
            <p class="tabel-popup-mobile-description">{{block.settings.mobile-text2}}</p>
            {%endif%}
          </div>
        </div>
        <div class="mobile-table-image-popup">
          {%if block.settings.img1 != blank%}
          <div class="small-one-half">
            {%if block.settings.img1 != blank%}
            <div class="table--image">
              <img src="{{block.settings.img1 | img_url : 'master'}}" />
              {%if block.settings.img-heading != blank%}
              <h4 class="img-heading">{{block.settings.img-heading}}</h4>
              {%endif%}
            </div>
            {%endif%}
          </div>
          {%endif%}
          <div class="small-one-half">
            {%if block.settings.img2 != blank%}
            <div class="table--image">
              <img src="{{block.settings.img2 | img_url : 'master'}}" />
              {%if block.settings.img-heading1 != blank%}
              <h4 class="img-heading">{{block.settings.img-heading1}}</h4>
              {%endif%}
            </div>
            {%endif%}
          </div>
          <div class="small-one-half">
            {%if block.settings.img3 != blank%}
            <div class="table--image">
              <img src="{{block.settings.img3 | img_url : 'master'}}" />
              {%if block.settings.img-heading2 != blank%}
              <h4 class="img-heading">{{block.settings.img-heading2}}</h4>
              {%endif%}
            </div>
            {%endif%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
	</div>
    {%endcase%}
{%endfor%}



