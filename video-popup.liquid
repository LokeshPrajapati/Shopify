{% unless page.title contains 'Contact Us' or page.title contains 'Visit Our Showrooms' or page.title contains 'FAQs' or page.title contains 'Returns & Exchanges' or page.title contains 'Shipping & Delivery' or page.title contains 'Terms & Conditions' or page.title contains 'Privacy Policy' or page.title contains 'Medical Insurance Wigs' or page.title contains 'Finance your Wig'%}
<div class="guide-video-container page-width">
  <div class="inner-video-container">
  	{% for block in section.blocks %}
    	{%comment%}{% case section.settings.column_width %}
    		{% when '1'%}
    			{% assign column--width = 'medium-up--one-whole small-one-whole'%}
    		{% when '2'%}
    			{% assign column--width = 'medium-up--one-half small-one-whole'%}
    		{% when '3'%}
    			{% assign column--width = 'medium-up--one-third small-one-whole'%}
     		{% when '4'%}
    			{% assign column--width = 'medium-up--one-fourth small-one-whole'%}
    		{% when '5'%}
    			{% assign column--width = 'medium-up--one-fifth small-one-whole'%}
    		{% when '6'%}
    			{% assign column--width = 'medium-up--one-sixth small-one-whole'%}
    		{% when '7'%}
    			{% assign column--width = 'medium-up--one-seventh small-one-whole'%}
    		{% when '8'%}
    			{% assign column--width = 'medium-up--one-eighth small-one-whole'%}
    	{% endcase %}
    	{%endcomment%}
    	{% if block.settings.img != blank %}
    	<div class="guide-image-container {{column--width}}">
          <div class="image_container">
             {% assign videoId = block.settings.video_url | split: '?v=' %}
          	<img src="{{block.settings.img | img_url : 'master'}}" class="myBtn" video_url="https://www.youtube.com/embed/{{ videoId[1] }}"/>
          </div>
    	</div>
    	{% endif %}
    	
    	
    
    {% endfor %}
  </div>
  <div class="myModal modal"  style="display:none;">
          <div class="modal-content">
            <span class="close">&times;</span>
            <div class="video-iframe">
   				<iframe class="youtub__video" width="100%"  height="272" src="https://www.youtube.com/embed/{{ videoId[1] }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
          </div>
        </div>
</div>
  
{%endunless%} 

<style>

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color:rgb(0 0 0 / 67%); /* Black w/ opacity */
}

/* Modal Content */
.modal-content {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 100%;
  max-width : 600px;
}

/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}
</style>
  

<script>
  $(document).ready(function(){
    $('.myBtn').click(function(){
    
    var vid_url = $(this).attr('video_url');
      console.log(vid_url);
      $('body .myModal').find("iframe").attr('src',vid_url);
      $('body .myModal').show();
    });
    $('.close').click(function(){
      $('.myModal').hide();
       $('body .myModal').find("iframe").attr('src','');
    })
  })
</script>

  
